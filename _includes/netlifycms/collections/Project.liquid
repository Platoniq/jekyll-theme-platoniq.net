{% raw %}
  - name: projects
    label: Proyectos
    label_singular: Proyecto
    folder: "_projects"
    i18n:
      structure: multiple_folders
      locales: *locales
    create: true
    editor:
      preview: true
    sortable_fields: ["date"]
    fields:

      - label: Layout
        name: layout
        widget: hidden
        default: project # to use our project html template
        i18n: duplicate

      - label: Slug
        name: slug
        hint: "Identificador único, compartido entre los distintos idiomas, que se usa para componer la URL"
        widget: string
        i18n: duplicate

      - label: Estado
        name: state
        widget: select
        options: ['Open project', 'Closed project']
        i18n: duplicate

      - label: Título
        name: title
        widget: string
        i18n: translate

      - label: Subtítulo
        name: subtitle
        widget: markdown
        i18n: translate

      - label: Banner image
        name: banner_image
        widget: object
        i18n: true
        fields:
          - label: Imagen
            name: path
            widget: image
            choose_url: false
            default: "/media/heart.png"              # we can use a default image
            media_library: { config: { multiple: false } }
            media_folder: "/media/projects/hero"                 # folder for the hero image of a project
            i18n: duplicate
          - label: Texto alternativo a la imagen
            name: alt
            widget: string
            i18n: translate

      - label: Fecha
        name: date
        widget: datetime
        i18n: duplicate

      - label: Descripción
        name: description
        widget: markdown
        i18n: translate

      - label: Presupuesto
        name: budget
        widget: string # o number??
        i18n: duplicate

      - label: Porcentaje privado
        name: private_percentage
        widget: string # o number??
        i18n: duplicate

      - label: Porcentaje público
        name: public_percentage
        widget: string # o number??
        i18n: duplicate

      - label: Porcentaje en busca de financiación
        name: looking_finance_percentage
        widget: string # o number??
        i18n: duplicate

      - name: Servicios
        label: services
        widget: relation
        collection: services
        searchFields: [title]
        valueField: title
        multiple: true

      - name: Categorías
        label: categories
        widget: relation
        collection: categories
        searchFields: [title]
        valueField: title
        multiple: true

        # FALTAN COLABORADORES, Y TEXTO PARA EL CONTENIDO EN SI

  {% endraw %}


