{% raw %}
  - name: projects
    label: Proyectos
    label_singular: Proyecto
    folder: "_projects"
    i18n:
      structure: multiple_folders
      locales: *locales
    create: true
    editor:
      preview: true
    sortable_fields: ["date"]
    fields:

      - label: Layout
        name: layout
        widget: hidden
        default: project # to use our project html template
        i18n: duplicate

      - label: Slug
        name: slug
        hint: "Identificador único, compartido entre los distintos idiomas"
        widget: string
        i18n: duplicate

      - label: Estado
        name: state
        widget: relation
        collection: states
        search_fields: [title]
        value_field: slug
        i18n: duplicate

      - label: Título
        name: title
        widget: string
        i18n: translate

      - label: Subtítulo
        name: subtitle
        widget: markdown
        i18n: translate

      - label: Banner image
        name: banner_image
        widget: object
        i18n: true
        fields:
          - label: Imagen
            name: path
            widget: image
            choose_url: false
            default: "/media/heart.png"              # we can use a default image
            media_library: { config: { multiple: false } }
            media_folder: "/media/projects"                
            i18n: duplicate
          - label: Texto alternativo a la imagen
            name: alt
            widget: string
            i18n: translate

      - label: Fecha
        name: date
        widget: datetime
        i18n: duplicate

      - label: Descripción
        name: description
        widget: markdown
        i18n: translate

      - label: Presupuesto
        name: budget
        widget: string # o number??
        i18n: duplicate

      - label: Porcentaje privado
        name: private_percentage
        widget: string # o number??
        i18n: duplicate

      - label: Porcentaje público
        name: public_percentage
        widget: string # o number??
        i18n: duplicate

      - label: Porcentaje en busca de financiación
        name: looking_finance_percentage
        widget: string # o number??
        i18n: duplicate

      - label: Servicios
        name: services
        widget: relation
        collection: services
        search_fields: [title]
        value_field: slug
        multiple: true
        i18n: duplicate

      - label: Categorías
        name: categories
        widget: relation
        collection: categories
        search_fields: [title]
        value_field: slug
        multiple: true
        i18n: duplicate

      - label: Miembros
        name: members
        widget: relation
        collection: members
        search_fields: [title]
        value_field: slug
        multiple: true
        i18n: duplicate

      - label: Colaboradores
        name: collaborators
        widget: relation
        collection: collaborators
        search_fields: [title]
        value_field: slug
        multiple: true
        i18n: duplicate

      - label: Contenido de la página
        name: body
        widget: markdown
        i18n: true

{% endraw %}


