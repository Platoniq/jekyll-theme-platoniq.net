{% raw %}
  - name: services
    label: Services
    label_singular: Service
    folder: "_services"
    i18n:
      structure: multiple_folders
      locales: *locales
    create: true
    editor:
      preview: true
    fields:

      - label: Slug
        name: slug
        hint: "Identificador único, compartido entre los distintos idiomas"
        widget: string
        i18n: duplicate

      - label: Título
        name: title
        widget: string
        i18n: translate

      - label: Descripción
        name: description
        widget: markdown
        i18n: translate

{% endraw %}