  {
    "url": "{{ call_to_action.button.link | default: '#nolink' }}",
    "label": "{{ call_to_action.button.label | default: 'no label'}}"
  }
{% endcapture %}

{% call_to_action {{cta_params}} %}
  {{ call_to_action.title }}
  {{ call_to_action.content }}
  {{ call_to_action.form_fields }}
{% endcall_to_action %}