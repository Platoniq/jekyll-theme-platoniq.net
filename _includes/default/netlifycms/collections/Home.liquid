{% raw %}
  - name: pages
    label: Páginas
    label_singular: Página
    folder: "_pages/"
    slug: "{{uid}}"
    i18n:
      structure: multiple_folders
      locales: *locales
    create: true
    editor:
      preview: true
    fields:
      - label: Publicada
        name: published
        widget: boolean
        default: false
        i18n: duplicate
  
      - label: Slug
        name: uid
        widget: string
        i18n: duplicate
  
      - label: Título
        name: title
        widget: string
        i18n: translate
  
      - label: Descripción o resumen de la página
        hint: Principalmente usada para SEO
        name: description
        widget: string
        i18n: translate
  
      - label: Contenido de la página
        name: body
        widget: markdown
        editor_components: ["gallery", "quote-tag", "file-tag", "documents-tag", "links-tag"]
        i18n: true
  
      - label: "Call to action"
        name: call_to_action
        widget: relation
        collection: call_to_actions
        display_fields: [uid]
        search_fields: [uid]
        value_field: uid
        i18n: duplicate
  {% endraw %}