<section class="d-flex justify-content-lg-between p-5 border-bottom border-top hr-light">
    <div class="d-flex flex-lg-row flex-column">
        <div class="me-lg-5 d-block">
            {%- comment -%} TODO: Replace this with netlify newsletter info {%- endcomment -%}
            <h6 class="fw-bold">{{site.data.newsletter.title}}</h6>
            <h4 class="fw-normal">{{site.data.newsletter.description}}</h4>
        </div>
    
        <div class="email_footer">
            <div class="input-group mb-3 ">
                <input type="text" class="form-control bg-transparent text-white" placeholder="{{ site.data.newsletter.email-label }}"
