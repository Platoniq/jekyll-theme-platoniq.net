                <button class="btn btn-primary text-white" type="button" id="button-addon2">{{ site.data.newsletter.submit-btn }}</button>
            </div>
            <div class="form-check">
                <input class="form-check-input text-white" type="checkbox">
                <label class="form-check-label" f>
                    {{ site.data.newsletter.policy-label }}
                </label>
            </div>
        </div>
