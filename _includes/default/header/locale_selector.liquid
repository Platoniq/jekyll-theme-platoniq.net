<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
        aria-expanded="false">
        <span class="burger__label">
          <span class="fi fi-{{page.locale}}"></span>
          {{ page.locale | upcase }}
        </span>
    </a>
    {% comment %} <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
        <li><a class="dropdown-item" href="#">Catalan</a></li>
        <li><a class="dropdown-item" href="#">Castellano</a></li>
        <li><a class="dropdown-item" href="#">Ingles</a></li>
    </ul> {% endcomment %}
    <ul class="pj-language-menu dropdown-menu" aria-labelledby="navbarDropdown">
    {% for translation in page_translations %}
        <li class="p-1">
          <a href="{{ translation.url | relative_url }}" class="dropdown-item {% if page.locale == translation.locale %}active rounded-2{% endif %}">
            <div class="flex-row p-1">
              {{ site.data[page.locale].global.locales[translation.locale] }}
              <span class="fi fi-{{page.locale}}"></span>
            </div>
          </a>
        </li>
      {% endfor %}
    </ul> 

</li>

{% comment %} <div class="header__locale-selector">
    <button type="button" class="burger">
      <span class="burger__label">
        {{ page.locale | upcase }}
      </span>
  
      <i class="fa-solid fa-xmark burger__icon-close burger__icon-close-right" ></i>
      
      <i class="fa-solid fa-globe burger__icon-open burger__icon-open-right" ></i>
 
      {% include svg/icon-world.liquid
          class="burger__icon-open burger__icon-open-right"
          alt=t_locale_menu %}
    </button>
  
    <ul class="pj-language-menu">
      {% for translation in page_translations %}
        <li>
          <a href="{{ translation.url | relative_url }}" class="{% if page.locale == translation.locale %}active{% endif %}">
            {{ site.data.i18n[page.locale].global.locales[translation.locale] }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div> {% endcomment %}